<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- ===== RimPlas ===== -->
  <ThingDef ParentName="ResourceBase">
    <defName>RimPlas</defName>
    <label>RimPlas</label>
    <description>A synthetic plastic used in building a huge variety of structures and items.</description>
    <techLevel>Industrial</techLevel>
    <tradeTags>
      <li>Exotic</li>
    </tradeTags>
    <graphicData>
      <texPath>Things/Item/RimPlas_RimPlas</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <statBases>
      <MarketValue>3.5</MarketValue>
      <Mass>0.3</Mass>
      <MaxHitPoints>150</MaxHitPoints>
      <Cleanliness>0.3</Cleanliness>
      <StuffPower_Armor_Sharp>0.62</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0.68</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>0.7</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>7</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>3</StuffPower_Insulation_Heat>
      <SharpDamageMultiplier>0.5</SharpDamageMultiplier>
      <BluntDamageMultiplier>0.5</BluntDamageMultiplier>
      <Flammability>0.3</Flammability>
    </statBases>
    <useHitPoints>true</useHitPoints>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <stuffProps>
      <categories>
        <li>Metallic</li>
        <li>Woody</li>
      </categories>
      <constructEffect>ConstructMetal</constructEffect>
      <color>(188,203,181)</color>
      <soundImpactStuff>BulletImpact_Metal</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
      <statFactors>
        <Beauty>0.55</Beauty>
        <DoorOpenSpeed>1.5</DoorOpenSpeed>
        <MaxHitPoints>0.8</MaxHitPoints>
        <WorkToBuild>1.5</WorkToBuild>
        <MarketValue>0.5</MarketValue>
        <BedRestEffectiveness>0.95</BedRestEffectiveness>
        <MeleeWeapon_CooldownMultiplier>0.8</MeleeWeapon_CooldownMultiplier>
        <Flammability>0.3</Flammability>
      </statFactors>
      <commonality>0.08</commonality>
    </stuffProps>
    <burnableByRecipe>true</burnableByRecipe>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
  </ThingDef>
  <!-- Recipes -->
  <RecipeDef>
    <defName>MakeRimPlas</defName>
    <label>Make RimPlas</label>
    <description>Craft 25 RimPlas.</description>
    <jobString>Making RimPlas.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cremate</effectWorking>
    <soundWorking>Recipe_Cremate</soundWorking>
    <allowMixingIngredients>false</allowMixingIngredients>
    <workAmount>500</workAmount>
    <targetCountAdjustment>25</targetCountAdjustment>
    <workSkill>Intellectual</workSkill>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Chemfuel</li>
          </thingDefs>
        </filter>
        <count>25</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Cloth</li>
          </thingDefs>
        </filter>
        <count>25</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Chemfuel</li>
        <li>Cloth</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <RimPlas>25</RimPlas>
    </products>
    <recipeUsers>
      <li>BiofuelRefinery</li>
    </recipeUsers>
    <skillRequirements>
      <Intellectual>4</Intellectual>
    </skillRequirements>
    <researchPrerequisite>RimPlas</researchPrerequisite>
  </RecipeDef>
  <RecipeDef>
    <defName>MakeBulkRimPlas</defName>
